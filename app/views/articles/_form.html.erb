<h1><%=name%> Articulo</h1>
<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each do |message| %>
		<div class="be-red white top-space">
			* <%= message %>
		</div>
	<%end%>
	<div class="field">
		<%= f.text_field :titulo, placeholder: "Titulo", class:"form-control" %>
	</div>
	<div class="field hide" style="display:none;">
		Portada: <%= f.file_field :cover%>
	</div>
	<div class="field">
		<%= f.text_area :cuerpo, placeholder: "Escribe aqui el articulo", style: "height:250px;", class:"form-control" %>
	</div>
	<div class="field">
		<label>Cantegorias</label>
		<% @categories.each do |category| %>
			<div class="fiel">
				<%= check_box_tag "categories[]", category.id %> <%= category.name %>
			</div>
		<%end%>
	</div>
	<div class="field">
		<%= f.submit "Guardar", class:"btn be-red white"%>
	</div>
<%end%>
